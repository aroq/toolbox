#!/usr/bin/env variant
# vi: ft=yaml

description: Install the dependencies

steps:
- script: |
    rm -fR .toolbox/tools
    mkdir -p .toolbox/tools
    yq r .toolbox.settings.yaml -j | jq -r '.tools | to_entries | .[] | .value.source,.value.destination' | xargs -t -n2 go-getter

tasks:
  run:
    steps:
    - script: |
        yq r .toolbox.settings.yaml -j | jq -r '.tools.k6.path,.tools.k6.image'
